<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.userProfile">

    <ImageButton
        android:id="@+id/userAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="141dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="142dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/userAlias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userAvatar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="144dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/allerta"
        android:text="UserAlias"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editTextPersonName"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userAlias"
        android:layout_alignParentStart="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:hint="NewAlias"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/changeAlias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userAlias"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/editTextPersonName"
        android:text="Change Alias"
        app:backgroundTint="@color/MainCo" />

    <Button
        android:id="@+id/changeBackground"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/editTextPersonName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="131dp"
        android:text="Change Chat Background"
        app:backgroundTint="@color/MainCo" />

    <Button
        android:id="@+id/deleteAccount"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/changeBackground"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="131dp"
        android:text="Delete Account"
        app:backgroundTint="#F44336" />

    <Button
        android:id="@+id/exitAccount"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/deleteAccount"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="131dp"
        android:text="Exit Account"
        app:backgroundTint="#F44336" />

</RelativeLayout>