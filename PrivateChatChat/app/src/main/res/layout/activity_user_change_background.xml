<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.UserChangeBackground">

    <ImageButton
        android:id="@+id/changeBGBack"
        android:layout_width="60dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/button_round_shape"
        android:scaleType="fitCenter"
        android:tint="#FFFFFF"
        tools:src="@drawable/left" />

    <Button
        android:id="@+id/toDefaultBG"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customBG"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="42dp"
        android:text="Choose from default backgrounds"
        app:backgroundTint="@color/MainCo" />

    <Button
        android:id="@+id/customBG"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="42dp"
        android:text="Camera / Select From Library"
        app:backgroundTint="@color/MainCo" />
</RelativeLayout>