<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".group.GroupChangeAvatar">

    <ImageButton
        android:id="@+id/groupChangeAvatarBack"
        android:layout_width="60dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/button_round_shape"
        android:scaleType="fitCenter"
        android:tint="#FFFFFF"
        tools:src="@drawable/left" />

    <RadioGroup
        android:id="@+id/groupRadioAvatar"
        android:layout_width="fill_parent"
        android:layout_height="600dp"
        android:layoutDirection="ltr"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:drawableRight="@drawable/a1"
            android:drawablePadding="20dp"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:drawableRight="@drawable/a2"
            android:drawablePadding="20dp"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:drawableRight="@drawable/a3"
            android:drawablePadding="20dp"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:drawableRight="@drawable/a4"
            android:drawablePadding="20dp"
            android:textColor="#FFFFFF" />


    </RadioGroup>

    <Button
        android:id="@+id/g_ApplyAvatar"
        android:layout_width="116dp"
        android:layout_height="59dp"
        android:layout_below="@+id/groupRadioAvatar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="10dp"
        android:text="Apply!"
        android:textSize="18sp"
        app:backgroundTint="@color/MainCo" />

</RelativeLayout>