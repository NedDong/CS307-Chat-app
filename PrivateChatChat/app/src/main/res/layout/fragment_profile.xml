<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.ProfileFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="208dp"
        android:layout_height="0dp"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toTopOf="@+id/userName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="35dp"
        android:text="张涛"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/birthdayText"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/birthdayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="335dp"
        android:text="Birthday: 04/08/1999"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        tools:text="Birthday: 04/08/1999" />

    <TextView
        android:id="@+id/accountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="47dp"
        android:text="Account:  365968531"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/quitButton"
        app:layout_constraintStart_toStartOf="@+id/birthdayText"
        app:layout_constraintTop_toBottomOf="@+id/birthdayText"
        tools:text="Account:  365968531" />

    <Button
        android:id="@+id/quitButton"
        android:layout_width="220dp"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:text="Quit"
        app:layout_constraintBottom_toTopOf="@+id/deregisterButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountText" />

    <Button
        android:id="@+id/deregisterButton"
        android:layout_width="220dp"
        android:layout_height="0dp"
        android:layout_marginBottom="118dp"
        android:text="deregister"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quitButton" />

    <Button
        android:id="@+id/button2"
        android:layout_width="98dp"
        android:layout_height="0dp"
        android:layout_marginTop="229dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="79dp"
        android:text="Change"
        app:layout_constraintBottom_toTopOf="@+id/birthdayText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>